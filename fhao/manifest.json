{
  "manifest_version": 3,
  "name": "番号获取",
  "version": "1.0",
  "description": "自动提取网页番号并显示在弹窗文本框中",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "获取番号"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
} 